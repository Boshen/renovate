{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["helpers:pinGitHubActionDigestsToSemver"],
  "timezone": "Asia/Shanghai",
  "schedule": ["before 9am on monday"],
  "automerge": true,
  "automergeType": "pr",
  "automergeSchedule": ["at any time"],
  "updateNotScheduled": false,
  "prHourlyLimit": 3,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on monday"],
    "automerge": true,
    "automergeSchedule": ["at any time"],
    "updateNotScheduled": true
  },
  "postUpdateOptions": ["pnpmDedupe"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^rust-toolchain\\.toml?$"],
      "matchStrings": [
        "channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""
      ],
      "depNameTemplate": "rust",
      "packageNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "groupName": "github-actions",
      "matchManagers": ["github-actions"],
      "rangeStrategy": "auto"
    },
    {
      "groupName": "napi",
      "matchManagers": ["cargo", "npm"],
      "matchPackageNames": ["napi", "napi-build", "napi-derive", "@napi-rs/cli"],
      "rangeStrategy": "auto",
      "schedule": ["at any time"]
    },
    {
      "groupName": "oxc",
      "matchManagers": ["cargo", "npm"],
      "matchPackageNames": ["oxc", "oxc_parser_napi", "oxc_transform_napi", "oxc-parser", "oxc-transform", "@oxc-project/runtime", "@oxc-project/types"],
      "rangeStrategy": "auto",
      "schedule": ["at any time"]
    },
    {
      "groupName": "rolldown",
      "matchManagers": ["npm"],
      "matchPackageNames": ["rolldown", "rolldown-vite"],
      "rangeStrategy": "auto",
      "schedule": ["at any time"]
    },
    {
      "groupName": "rust crates",
      "matchManagers": ["cargo"],
      "rangeStrategy": "auto",
      "ignoreDeps": ["napi", "napi-build", "napi-derive"]
    },
    {
      "groupName": "npm packages",
      "matchManagers": ["npm"],
      "rangeStrategy": "auto"
    },
    {
      "groupName": "typos",
      "matchManagers": ["github-actions"],
      "matchDepNames": ["crate-ci/typos"],
      "schedule": ["at any time"],
      "rangeStrategy": "auto",
      "automergeSchedule": ["at any time"]
    },
    {
      "groupName": "rust toolchain",
      "matchManagers": ["custom.regex"],
      "matchDepNames": ["rust"],
      "schedule": ["at any time"],
      "automergeType": "pr",
      "automergeSchedule": ["at any time"]
    },
    {
      "matchDatasources": ["node-version"],
      "matchDepNames": ["node"],
      "enabled": false
    }
  ]
}
