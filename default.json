{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["helpers:pinGitHubActionDigestsToSemver"],
  "timezone": "Asia/Shanghai",
  "schedule": ["before 9am on monday"],
  "automerge": true,
  "automergeType": "pr",
  "automergeSchedule": ["at any time"],
  "updateNotScheduled": false,
  "prHourlyLimit": 3,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on monday"],
    "automerge": true,
    "automergeSchedule": ["at any time"],
    "updateNotScheduled": true
  },
  "postUpdateOptions": ["pnpmDedupe"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^rust-toolchain\\.toml?$"],
      "matchStrings": [
        "channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""
      ],
      "depNameTemplate": "rust",
      "packageNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["dprint.json", "dprint.jsonc", ".dprint.json", ".dprint.jsonc"],
      "matchStrings": [
        "\"https://plugins\\.dprint\\.dev/(?<pluginName>[^/-]+)-(?<currentValue>[^/-]+?)\\.wasm\""
      ],
      "depNameTemplate": "dprint-{{pluginName}}",
      "packageNameTemplate": "dprint/dprint-plugin-{{{pluginName}}}",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["dprint.json", "dprint.jsonc", ".dprint.json", ".dprint.jsonc"],
      "matchStrings": [
        "\"https://plugins\\.dprint\\.dev/(?<user>g-plane)/(?<pluginName>[^/-]+)-(?<currentValue>[^/]+?)\\.wasm\""
      ],
      "depNameTemplate": "dprint-{{pluginName}}",
      "packageNameTemplate": "{{{user}}}/{{{pluginName}}}",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "groupName": "github-actions",
      "matchManagers": ["github-actions"],
      "rangeStrategy": "auto"
    },
    {
      "groupName": "napi",
      "matchDatasources": ["crate", "npm"],
      "matchPackageNames": ["napi", "napi-build", "napi-derive", "@napi-rs/cli"],
      "rangeStrategy": "auto",
      "schedule": ["at any time"]
    },
    {
      "groupName": "oxc",
      "matchDatasources": ["crate", "npm"],
      "matchPackageNames": [
        "@oxc-project/runtime",
        "oxc",
        "oxc-**",
        "oxc_**",
        "oxfmt",
        "oxlint",
        "oxlint-tsgolint"
      ],
      "rangeStrategy": "auto",
      "schedule": ["at any time"]
    },
    {
      "groupName": "rolldown",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["rolldown", "rolldown-vite", "tsdown"],
      "rangeStrategy": "auto",
      "schedule": ["at any time"]
    },
    {
      "groupName": "rust crates",
      "matchDatasources": ["crate"],
      "rangeStrategy": "auto",
      "ignoreDeps": [
        "napi",
        "napi-build",
        "napi-derive",
        "oxc",
        "oxc_minify_napi",
        "oxc_parser_napi",
        "oxc_resolver",
        "oxc_resolver_napi",
        "oxc_transform_napi"
      ]
    },
    {
      "groupName": "npm packages",
      "matchDatasources": ["npm"],
      "rangeStrategy": "auto",
      "ignoreDeps": [
        "@napi-rs/cli",
        "@oxc-project/runtime",
        "@oxc-project/types",
        "oxc-minify",
        "oxc-parser",
        "oxc-transform",
        "oxfmt",
        "oxlint",
        "oxlint-tsgolint",
        "rolldown",
        "rolldown-vite",
        "tsdown"
      ]
    },
    {
      "groupName": "typos",
      "matchManagers": ["github-actions"],
      "matchDepNames": ["crate-ci/typos"],
      "schedule": ["at any time"],
      "rangeStrategy": "auto",
      "automergeSchedule": ["at any time"]
    },
    {
      "groupName": "rust toolchain",
      "matchManagers": ["custom.regex"],
      "matchDepNames": ["rust"],
      "schedule": ["at any time"],
      "automergeType": "pr",
      "automergeSchedule": ["at any time"]
    },
    {
      "groupName": "dprint plugins",
      "customType": ["custom.regex"],
      "matchDepNames": ["dprint-*"]
    },
    {
      "matchDatasources": ["node-version"],
      "matchDepNames": ["node"],
      "enabled": false
    },
    {
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["node"],
      "matchDepTypes": ["uses-with"],
      "matchPackageNames": "actions/node-versions",
      "enabled": false
    }
  ]
}
